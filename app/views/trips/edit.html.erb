<%= form_with url: trip_path(@trip.id), method: :patch, local: true do |f| %>
  <div class="form-floating mb-3">
    <%= f.text_field :name, value: @trip.name, class: "form-control", id: "floatingInput2", required: true %>
    <%= f.label "Name your trip!" %>
  </div>
  <br>
  <div class="form-floating mb-3">
    <h6>Start Date</h6>
    <%= f.date_field :start_date, value: @trip.start_date, required: true %>
  </div>
  <div class="form-floating mb-3">
    <h6>End date</h6>
    <%= f.date_field :end_date, value: @trip.end_date, required: true %>
  </div>
  <%= f.submit 'Edit trip!', class: 'btn btn-primary' %>
<% end %>

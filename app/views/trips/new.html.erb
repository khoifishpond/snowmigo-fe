<%= form_with url: trips_path, method: :post, local: true do |f| %>
  <div class="form-floating mb-3">
    <h6>Start Date</h6>
    <%= f.date_field :start_date, required: true %>
  </div>
  <div class="form-floating mb-3">
    <h6>End date</h6>
    <%= f.date_field :end_date, required: true %>
  </div>
  <div class="form-floating mb-3">
    <h6>Add users</h6>
    <%= f.text_field :name %>
    #search user like in adopt dont shop
  </div>
  <%= f.submit 'Create trip!', class: 'btn btn-primary' %>
<% end %>
